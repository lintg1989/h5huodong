#parse("content/base/back/common/macro.vm")
<!DOCTYPE html>
<html lang="en">
#parse("content/base/back/common/head.vm")
<link href="$!{basePath}/content/system/css/treetable/default/treeTable.css" rel="stylesheet" type="text/css" />
<body style='overflow:scroll;overflow-x:hidden'>
	<div class="container bs-docs-container" style="width:100%;">
		<div class="row">
			<form role="form" class="form-inline" action="$!{basePath}/system/back/jwSystemAuth/list.do" method="post"  id="formSubmit">
				<div  class="col-md-10" style="width:100%">
								<div class="panel panel-default">
								  <div class="panel-heading">权限管理</div>
								  <div class="panel-body">
								  		<div class="search">
															 <div class="form-group col-sm-4">
															    <label for="authId" class="control-label col-sm-3 line34">权限编码</label>
															     <div class="col-sm-8">
															    <input type="text" name="authId" id="authId" value="$!{jwSystemAuth.authId}" class="form-control">
															  	</div>
															 </div>
															 <div class="form-group col-sm-4">
															    <label for="parentAuthId" class="control-label col-sm-5 line34">上一级权限编码</label>
															     <div class="col-sm-6">
															    <input type="text" name="parentAuthId" id="parentAuthId" value="$!{jwSystemAuth.parentAuthId}" class="form-control">
															  	</div>
															 </div>
											  <button type="submit" class="btn btn-primary">搜  索</button>
											  <div class="clearfix"></div>
								  		</div>
								  		<div id="legend">
								          <legend  class="le"><button type="button" class="btn btn-primary" onclick="doUrl('$!{basePath}/system/back/jwSystemAuth/toAdd.do')" >新增</button></legend> 
								        </div>
								        <table class="table table-striped table-hover table-condensed table-bordered" id="treeTable1">
									        <thead>
													<th>权限编码</th>
													<th>权限名称</th>
													<th>权限类型 </th>
													<th>权限说明</th>
													<th>权限控制</th>
													##<th>上一级权限编码</th>
													<th>排序</th>
													<th>层级</th>
													<th>是否叶子节点</th>
						                			<th>操作</th>
									        </thead>
									        <tobody>
									    	  #if($!{pageInfos})
								                #foreach($!{info} in $!{pageInfos})
									            	<tr id="$!{info.authId}" pId="$!{info.parentAuthId}">			
																	<td controller="true">$!{info.authId}</td>
																	<td >$!{info.authName}</td>
																	<td>
																		#if($!info.authType=='0')  
																		菜单
																		#elseif($!info.authType=='1')  
																		功能
																		#end
																	</td>
																	<td>$!{info.authDesc}</td>
																	<td>$!{info.authContr}</td>
																	##<td>$!{info.parentAuthId}</td>
																	<td>$!{info.sortNo}</td>
																	<td>$!{info.bizLevel}</td>
																	<td>
																		#if($!info.authType=='Y')  
																		是
																		#elseif($!info.authType=='N')  
																		否
																		#end
																	</td>
										                <td class="last">
							                			<a href="javascript:doUrl('$!{basePath}/system/back/jwSystemAuth/toEdit.do?id=$!{info.id}')" >编辑</a>
							                			<a href="javascript:delData('$!{basePath}/system/back/jwSystemAuth/doDelete.do?id=$!{info.id}')">删除</a>
						                				</td>
									           		</tr>
									             #end
									    	 #end
									         </tobody>
									    </table>
										<div class="text-right">
											<!--公用翻页代码-->
							                #set($attr='formSubmit')
							            	#showPageList($pageInfos $attr)
							                <!--END公用翻页代码-->
										</div>
								  </div>	
								</div>
				</div>  
				</form>
		</div>
	</div>
</body>
<script type="text/javascript" src="$!{basePath}/content/system/js/treetable/jquery.treeTable.js"></script>
