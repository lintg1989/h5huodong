#parse("content/base/back/common/macro.vm")
<!DOCTYPE html>
<html lang="en">
#parse("content/base/back/common/head.vm")
<body style='overflow:scroll;overflow-x:hidden'>
	<div class="container bs-docs-container" style="width:100%;">
		<div class="row">
			<form role="form" class="form-inline" action="$!{basePath}/jiugongge/back/wxActJiugonggeRecord/list.do" method="post"  id="formSubmit">
				<div  class="col-md-10" style="width:100%">
								<div class="panel panel-default">
								  <div class="panel-heading">中奖列表</div>
								  <div class="panel-body">
								  		<div class="search">
															 <div class="form-group col-sm-4">
															    <label for="openid" class="control-label col-sm-4 line34">openid</label>
															     <div class="col-sm-8">
															    <input type="text" name="openid" id="openid" value="$!{wxActJiugonggeRecord.openid}" class="form-control">
															  	</div>
															 </div>
															 <div class="form-group col-sm-4">
															    <label for="nickname" class="control-label col-sm-4 line34">昵称</label>
															     <div class="col-sm-8">
															    <input type="text" name="nickname" id="nickname" value="$!{wxActJiugonggeRecord.nickname}" class="form-control">
															  	</div>
															 </div>
															 <div class="form-group col-sm-4">
															    <label for="awardsId" class="control-label col-sm-4 line34">奖项</label>
															     <div class="col-sm-8">
															    <select name="awardsId" id="awardsId" value="$!{wxActJiugonggeRecord.awardsId}" class="form-control" >
															        <option value="">请选择...</option>
													      			#foreach($award in $awards)
													      				<option value="$!award.id" #if("$!award.id" == "$!{wxActJiugonggeRecord.awardsId}") selected="selected" #end>$!award.awardsName</option>
													      			#end
												      	         </select>
															  	</div>
															 </div>
											  <button type="submit" class="btn btn-primary">搜  索</button>
											  <div class="clearfix"></div>
								  		</div>
								  		<div id="legend">
								          <legend  class="le"><a class="btn btn-info" href="javascript:doUrl('$!{basePath}/jiugongge/back/wxActJiugonggeRecord/exportExcel.do?actId=$!{wxActJiugonggeRecord.actId}')">导出Excel</a></legend>
								        </div>
								        <table class="table table-striped">
									        <thead>
													##<th>活动id</th>
													<th>所属活动</th>
													<th>openid</th>
													<th>昵称</th>
													<th>中奖时间</th>
													<th>奖项</th>
													<th>收货人姓名</th>
													<th hidden>抽奖序号</th>
													##<th>微信公众号</th>
						                			<th>操作</th>
									        </thead>
									        <tobody>
									    	  #if($!{pageInfos})
								                #foreach($!{info} in $!{pageInfos})
									            	<tr>			
																	##<td>$!{info.actId}</td>
																	<td>$!{info.actName}</td>
																	<td>$!{info.openid}</td>
																	<td>$!{info.nickname}</td>
																	<td>$!dateTool.format("yyyy-MM-dd HH:mm:ss",$!{info.recieveTime})</td>
																	<td>$!{info.awardsName}</td>
																	<td>$!{info.realname}</td>
																	<td hidden>$!{info.seq}</td>
																	##<td>$!{info.jwidName}</td>
										                <td class="last">
							                			<a href="javascript:doUrl('$!{basePath}/jiugongge/back/wxActJiugonggeRecord/toDetail.do?id=$!{info.id}&backurl=$!{backurl}')">详情</a>
						                				</td>
									           		</tr>
									             #end
									    	 #end
									         </tobody>
									    </table>
										<div class="text-right">
											<!--公用翻页代码-->
							                #set($attr='formSubmit')
							            	#showPageList($pageInfos $attr)
							                <!--END公用翻页代码-->
										</div>
								  </div>	
								</div>
				</div>  
				<div class="form-group mno">
						<div class="col-sm-offset-1 col-sm-6">
							<button type="button" class="btn btn-default" id="formReturn" data-dismiss="modal" onclick="doUrl('$!{basePath}/$!{backurl}')">返回</button>
        				 </div>
        		</div> 
				</form>
		</div>
	</div>
</body>
</html>