 location.href='$!{basePath}/jiugongge/winners.do?actId=$!{bargain.id}&jwid=$!{weixinDto.jwid}&openid=$!{weixinDto.openid}&subscribe=$!{weixinDto.subscribe}&appid=$!{weixinDto.appid}'
